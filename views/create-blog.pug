extends layout.pug 

block content
    .container 
        h1.heading_blog Create Your Blog 

        if error 
            p.error=error

        if success 
            p.success Successfully blog saved

        form.form(action="/create" method='POST' enctype='multipart/form-data') 
            label Title 
            input.input(type="text" name="title")

            label Author 
            input.input(type="text", name="author")

            label Description 
            textarea.textarea(type="text" name="description" rows="8" cols="50")

            label Photo
            input.photo(type='file' name='photo' required)

            button.blog_read Create Blog